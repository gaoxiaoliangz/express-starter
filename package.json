{
  "name": "nodejs-rest-starter",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "dev:ts-node": "nodemon --config nodemon.ts-node.json",
    "start": "node dist/main.js",
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "debug": "~4.1.1",
    "dotenv": "^8.1.0",
    "ejs": "~2.6.2",
    "express": "~4.17.1",
    "http-errors": "~1.7.3",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "rimraf": "^3.0.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.18.0"
  },
  "repository": "git@github.com:gaoxiaoliangz/nodejs-rest-starter.git",
  "author": "gaoxiaoliangz <gaoxiaoliangz@gmail.com>",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
