{
  "name": "node-starter",
  "version": 2,
  "builds": [
    {
      "src": "src/app.ts",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "50mb",
        "helpers": false,
        "includeFiles": ["public/**", "views/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/app.ts" },
    { "src": "/(.*)", "dest": "/src/app.ts" }
  ],
  "env": {
    "DEBUG": "node-starter:*",
    "DB_NAME": "node_starter",
    "DB_URI": "@mongodb-url",
    "SECRET": "@secret",
    "LOGGER": "log4js"
  },
  "github": {
    "silent": true
  }
}
